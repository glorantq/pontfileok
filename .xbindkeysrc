#Lower volume
"~/.local/scripts/sh_wireplumber.py dec"
    m:0x0 + c:122
    XF86AudioLowerVolume 

#Increase volume
"~/.local/scripts/sh_wireplumber.py inc"
    m:0x0 + c:123
    XF86AudioRaiseVolume 

#Mute volume
"~/.local/scripts/sh_wireplumber.py mute"
    m:0x0 + c:121
    XF86AudioMute 

#Print screen
"(maim && notify-send "Screenshot captured" "Copied screenshot to the clipboard") | xclip -selection clipboard -t image/png"
    m:0x0 + c:107
    Print 

#Snipping tool
"(maim -s && notify-send "Screenshot captured" "Copied screenshot of the area to the clipboard") | xclip -selection clipboard -t image/png"
    m:0x41 + c:39
    Shift+Mod4 + s 

#Print screen (window)
"(maim -i `xdotool getactivewindow` && notify-send "Screenshot captured" "Copied screenshot of \"$(xdotool getactivewindow getwindowname)\" the clipboard") | xclip -selection clipboard -t image/png"
    m:0x1 + c:107
    Shift + Print 

